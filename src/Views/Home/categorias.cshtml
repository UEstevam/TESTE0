@{
    ViewData["Title"] = "Bem-Vindo ao Estoque Pro";
}
<head>
    <link rel="stylesheet" href="~/css/categoria.css">
</head>
<body>
    <div class="container">
        <header class="cabecalho">
            <div class="estoque-pro-header">
                <img src="~/images/logo.png" alt="Logo Estoque Pro" class="logo">
                <h1>ESTOQUE PRO</h1>
            </div>
            <div class="logout">
                <a href="#">Sair</a>
            </div>
        </header>

        <div class="menu">
            <h2>EMPRESA XXXXXXX LTDA</h2>
            <nav>
                <ul>
                    <li><a href="#">Estoques</a></li>
                    <li><a href="#">Categorias</a></li>
                    <li><a href="#" class="active">Fornecedores</a></li>
                    <li><a href="#">Perfil</a></li>
                </ul>
            </nav>
        </div>

        <main>
            <div class="title">
                <h2>Gerenciar Fornecedores</h2>
            </div>

            <div class="add-supplier">
                <button onclick="window.location.href='adicionar_fornecedor.html'">Adicionar Fornecedor</button>
            </div>

            <table class="suppliers-table">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Nome/Empresa</th>
                        <th>Endereço</th>
                        <th>Telefone</th>
                    </tr>
                </thead>
            </table>
        </main>
    </div>
</body>
</html>
