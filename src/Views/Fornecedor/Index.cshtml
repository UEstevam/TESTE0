@model IEnumerable<src.Models.Fornecedor>

@{
    ViewData["Title"] = "Bem-Vindo ao Estoque Pro";
}
<head>
    <link rel="stylesheet" href="~/css/fornecedores.css">
</head>
<body>
    <div class="container">
        <header class="cabecalho">
            <div class="estoque-pro-header">
                <img src="~/images/logo.png" alt="Logo Estoque Pro" class="logo">
                <h1>ESTOQUE PRO</h1>
            </div>
            <div class="logout">
                <a href="#">Sair</a>
            </div>
        </header>

        <div class="menu">
            <h2>EMPRESA XXXXXXX LTDA</h2>
            <nav>
                <ul>
                    <li><a href="#">Estoques</a></li>
                    <li><a href="#">Categorias</a></li>
                    <li><a href="#" class="active">Fornecedores</a></li>
                    <li><a href="#">Perfil</a></li>
                </ul>
            </nav>
        </div>

        <main>
            <div class="title">
                <h2>Gerenciar Fornecedores</h2>
            </div>

            <div class="add-supplier">
                <button onclick="window.location.href='adicionar_fornecedor.html'">Adicionar Fornecedor</button>
            </div>

            <table class="table">
                <thead>
                    <tr>
                        <th>
                            Nome
                        </th>
                        <th>
                            Email
                        </th>
                        <th>
                            Telefone
                        </th>
                        <th>
                            Endereco
                        </th>
                        <th>
                           Numero
                        </th>
                        <th>
                           UF
                        </th>
                        <th>
                           CEP
                        </th>
                        <th>Açoes</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Nome)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Email)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Telefone)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.EnderecoRua)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.EnderocoNumero)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.EnderecoUF)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.EnderecoCEP)
                            </td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
                                <a asp-action="Details" asp-route-id="@item.Id">Detalhes</a> |
                                <a asp-action="Delete" asp-route-id="@item.Id">Deletar</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </main>
    </div>
</body>
</html>
